<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp"
    android:id="@+id/ContactConstraint"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/KartinkaKontakta"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

    <TextView
        app:layout_constraintTop_toTopOf="@id/KartinkaKontakta"
        app:layout_constraintStart_toEndOf="@id/KartinkaKontakta"
        android:id="@+id/holderTextView"
        android:textSize="24sp"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/contactTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/holderTextView"
        app:layout_constraintStart_toStartOf="@id/holderTextView"/>

</androidx.constraintlayout.widget.ConstraintLayout>